<div class="main">

<div class="header slide-up">
<h1>YumBurger</h1>

</div>

<div class="column-left slide-left-1">
    <h2>Burgers you can eat</h2>
<ul>

  {{#each burgers}}
    {{#unless devoured}}
     <div class="burger-item">{{> burgers/burger-block devoured=false}}</div> 
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="column-right slide-left-2">
    <h2>Burgers that have been eaten!</h2>
<ul>

  {{#each burgers}}
    {{#if devoured}}
      <div class="burger-item">{{> burgers/burger-block devoured=true}}</div>
    {{/if}}
  {{/each}}
</ul>
</div>


<div class="sidebar slide-left-3">
<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    {{!-- <label for="ca">Burger Name:</label> --}}
    <input type="text" id="ca" name="buger_name" placeholder="Enter Burger Name" 
onfocus="this.placeholder = ''"
onblur="this.placeholder = 'Enter Burger Name'" >
  </div>
  <button type="submit" class="eat-button"><div class="text">Add Burger</div></button>
  <div class="error-group" style="display:none;">
    error-group
    <div class="errors">
      errors
    </div>
  </div>
</form>
</div>

</div>
